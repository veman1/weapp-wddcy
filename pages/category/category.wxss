/*容器总体布局为左右两列*/

.container {
  display: flex;
  flex-direction: row;
}

/*侧边栏顶级分类给予固定宽度*/

.sidebar {
  width: 240rpx;
  border-top: 1px solid #e5e5e5;
  height: 568px;
}

/*text块状布局独占一行*/

.sidebar text {
  display: block;
  border: 1px solid #e5e5e5;
  border-top: 0;
  height: 40px;
  line-height: 40px;
  text-align: center;
  color: #232626;
  font-size: 14px;
  background-color: #fff;
}

/*hight light*/

.sidebar text.highlight {
  background-color: #f3f5f7;
  color: #f23131;
  border-right: 0;
}

.main {
  width: 100%;
  display: flex;
  flex-direction: column;
}

/*category banner*/

.banner {
  width: 100%;
  height: 180rpx;
  margin: 20rpx 0;
}

/* 标题 */

.title {
  display: block;
  padding: 30rpx;
  font-size: 30rpx;
}

/*网格布局子类九宫格分布*/

.gridview {
  background-color: #fff;
  height: 100%;
  box-sizing: border-box;
  border-top: 1rpx solid #ccc;
}

/*向左流动*/

.gridview dl {
  box-sizing: border-box;
  width: 250rpx;
  float: left;
  text-align: center;
  padding: 50rpx 0;
  border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}

/*图片*/

.gridview dd image {
  width: 100%;
  height: 120rpx;
}

/*文字*/

.gridview dt text {
  font-size: 30rpx;
  text-align: center;
  display: block;
  line-height: 40rpx;
  margin-bottom: 30rpx;
}
