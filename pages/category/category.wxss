/* 搜索框 */

.search-box {
  position: relative;
  top: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  width: 671rpx;
  height: 90rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.search-icon {
  position: absolute;
  top: 30rpx;
  left: 50rpx;
  width: 36rpx;
  height: 36rpx;
}

.search-input {
  display: inline-block;
  background: #eee;
  font-size: 30rpx;
  font-family: '微软雅黑';
  width: 650rpx;
  height: 50rpx;
  min-height: 0rpx;
  padding-left: 50rpx;
  border-radius: 25rpx;
}

.search-input::placeholer {
  color: #000;
}

