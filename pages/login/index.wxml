<view class="wx-view_login" style="height:{{height}}px;">

  <view class="view_logup_form">
    <view class="wx-view_log_item" style="border-bottom-style: none;">
      <input placeholder-style="color:#999999" class="c-block c-fullwidth wx_input" placeholder="账号" bindinput="inputUname" value="{{ uname }}" auto-focus />
    </view>
    <view class="line"></view>
    <view class="wx-view_log_item" style="border-bottom-style: none;">
      <input placeholder-style="color:#999999" class="c-block c-fullwidth wx_input" password placeholder="密码" bindinput="inputPwd" value="{{ pwd }}" />
    </view>
  </view>

  <view class="g-submit">
    <view class="g-submit__button">
      <button class="wx-button_logup" bindtap="login" hover-class="button-hover" size="default" type="warn">登录</button>
    </view>
    <view class="g-submit__footer">
      <navigator class="pull-right" hover-class='none' url="/pages/register/index">手机快速注册</navigator>
    </view>
  </view>

</view>