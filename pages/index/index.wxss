/* 主体 */

.section {
  overflow: hidden;
  background: #fff;
  padding: 20rpx auto;
  margin-top: 20rpx;
}

.sectionTitle {
  display: block;
  width: 320rpx;
  height: 60rpx;
  margin: 20rpx auto;
}

.tabLine {
  white-space: nowrap;
  background: #f2f2f2;
  width: 750rpx;
  height: 80rpx;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
}

.tabLine text{
  font-size: 33rpx;
  box-sizing: border-box;
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 20rpx;
}
.section-tab-selected {
  color: #F06022;
  border-bottom: 2px solid #F06022;
}
.section-main {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx;
}



.section-main scroll-view {
  white-space: nowrap;
  width: 660rpx;
}

.goods-item {
  overflow: hidden;
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
}

.goods-item image {
  display: block;
  width: 200rpx;
  height: 200rpx;
}

.goods-item text {
  display: block;
  font-size: 30rpx;
  text-align: center;
}

.showMore-button {
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #666;
  font-size: 28rpx;
  width: 100rpx;
  margin: auto 0;
}

.showMore-button text {
  display: block;
  width: 20rpx;
}

.showMore-button image {
  width: 12rpx;
}

/* 大的框 */

.section-big .sectionTitle {
  width: 440rpx;
}

.section-main-big {
  padding-left: 20rpx;
}

.goods-item-big {
  float: left;
  position: relative;
  width: 220rpx;
  height: 330rpx;
  margin: 0 0 20rpx 20rpx;
}

.goods-item-big image {
  width: 100%;
  height: 100%;
}

.item-textBox {
  position: absolute;
  bottom: 0;
  left: 0;
  text-align: center;
  background: rgba(255, 255, 255, 0.7);
  overflow: hidden;
  width: 100%;
}

.item-textBox text {
  display: block;
  font-size: 30rpx;
  white-space: nowrap;
  width: 100%;
}

/* 每周特供 */

.weeklySale {
  text-align: center;
  background: #fff;
  overflow: hidden;
  margin-top: 20rpx;
}

.weeklySale-item {
  width: 100%;
}

/* 精选推荐 */

.main {
  padding-left: 20rpx;
  background: #fff;
  text-align: center;
  margin-top: 15rpx;
}

.main-title {
  width: 290rpx;
  margin: 20rpx 0;
}

.list {
  background: #fff;
  overflow: hidden;
}

.list image {
  width: 345rpx;
  height: 345rpx;
  border-radius: 5rpx;
}

/*主商品区*/

.carts-item {
  position: relative;
  float: left;
  width: 340rpx;
  /* border-bottom: 3rpx solid #e3e3e3; */
  border: 1rpx solid #ef8d02;
  border-radius: 8rpx;
  background: #fff;
  margin: 0 20rpx 30rpx 0;
  overflow: hidden;
}

/*左部图片*/

.carts-image {
  width: 100%;
}

/*右部描述*/

.carts-text {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: baseline;
}

/*右上部分标题*/

.carts-title {
  width: 90%;
  font-size: 25rpx;
  /* color: #444; */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 5rpx 0;
  line-height: 30rpx;
  /* display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; */
}

/*右下部分价格与数量*/

.carts-subtitle {
  font-size: 25rpx;
  color: darkgray;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/*价格*/

.carts-price {
  color: #de3d96;
  font-size: 25rpx;
  line-height: 22px;
  margin-top: 15rpx;
}

image.addCart-button {
  position: absolute;
  bottom: 10rpx;
  right: 15rpx;
  width: 40rpx;
}

/* 当季特卖 */

.seasonSale-section .main-title {
  display: block;
  margin: 0 auto;
}

.seasonSale-categoryBox {
  overflow: hidden;
  margin-top: 10rpx;
}

.seasonSale-categoryTitle {
  width: 100%;
  display: block;
}

.seasonSale-item-big {
  float: left;
  position: relative;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  align-items: flex-start;
  width: 300rpx;
  height: 360rpx;
  padding: 0 18rpx;
  border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}

.seasonSale-item-big .goods-image {
  width: 260rpx;
  height: 257rpx;
}

.seasonSale-item-big text, .seasonSale-item-small text {
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 90%;
  font-size: 30rpx;
}

.seasonSale-price {
  color: #ff4646;
}

.seasonSale-item-small {
  float: left;
  position: relative;
  box-sizing: border-box;
  width: 450rpx;
  height: 180rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #ccc;
}

.seasonSale-item-small .goods-image {
  float: left;
  width: 160rpx;
  height: 160rpx;
}

.seasonSale-item-small .right-box {
  float: left;
  overflow: hidden;
  width: 250rpx;
  text-align: left;
  padding: 0 0 0 20rpx;
}

.seasonSale-item-small .seasonSale-price {
  display: block;
  margin-top: 50rpx;
}

