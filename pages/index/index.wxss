/* 搜索框 */

.search-box {
  position: fixed;
  top: 0;
  z-index: 10;
  transition: all 0.2s;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 671rpx;
  height: 90rpx;
  padding: 0 40rpx;
}

.bgOrange {
  background: red;
}

.search-icon {
  position: absolute;
  top: 30rpx;
  left: 50rpx;
  width: 36rpx;
  height: 36rpx;
}

.search-input {
  display: inline-block;
  background: #fff;
  font-size: 30rpx;
  font-family: '微软雅黑';
  width: 500rpx;
  height: 50rpx;
  min-height: 0rpx;
  padding-left: 50rpx;
  border-radius: 25rpx;
}

.search-button {
  color: #f08300;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  background: #fff;
  width: 100rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

/*功能区*/

.func-area {
  display: flex;
  flex-direction: row;
  margin: 0 0;
  padding-top: 10rpx;
  background: white;
  padding-bottom: 18rpx;
}

.func-area view {
  width: 25%;
  text-align: center;
}

.func-area text {
  display: block;
  color: #6c6c6c;
  font-size: 30rpx;
  line-height: 50rpx;
}

.func-area image {
  width: 125rpx;
  height: 125rpx;
}

.container-class {
  display: flex;
  flex-direction: column;
}

/* 头条广告 */

.headlineAd {
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  background: #fff;
  padding: 0 30rpx;
}

.wangdongHeadline {
  width: 223rpx;
}

.headlineAd text {
  color: #404040;
  font-size: 25rpx;
  font-weight: bold;
  width: 442rpx;
}

.rightArrow {
  width: 20rpx;
}

